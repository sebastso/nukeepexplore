import groovy.json.*
pipeline{
	stages {
		stage('PreBuild') {
			steps {
        
				script {
					bat """
					@echo off
					echo ####################################################
					echo #  Update Submodules
					echo ####################################################
					@echo on
					git submodule update --init --recursive --checkout
					"""
				}
			}
		}
	}
}
